{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "build": {
    "env": {
      "VITE_API_URL": "@vite_api_url",
      "VITE_PAYPAL_CLIENT_ID": "@vite_paypal_client_id"
    }
  },
  "env": {
    "VITE_API_URL": "@vite_api_url",
    "VITE_PAYPAL_CLIENT_ID": "@vite_paypal_client_id"
  }
}
